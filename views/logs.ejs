<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Borrow Logs</title>
    <link rel="stylesheet" href="/style.css">
    <style>
        .main-content table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .main-content th,
        .main-content td {
            padding: 12px 15px;
            border: 1px solid #ddd;
            text-align: left;
        }

        .main-content th {
            background-color: #2c3e50;
            color: white;
        }

        .main-content tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .main-content tr:hover {
            background-color: #ddd;
        }
    </style>
</head>

<body>
    <aside class="sidebar">
        <h2>ðŸ“š Library</h2>
        <a href="/dashboard">Dashboard</a>
        <% if(user.role==='librarian' ){ %>
            <a href="/logs" class="active">Borrow Logs</a>
            <a href="/users">Users</a>
            <% } %>
                <a href="/logout">Logout</a>
    </aside>

    <div class="main-content">
        <header>
            <h1>Borrow Logs</h1>
        </header>

        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Book Title</th>
                    <th>User</th>
                    <th>Timestamp</th>
                </tr>
            </thead>
            <tbody>
                <% if(logs.length){ logs.forEach(log=> { %>
                    <tr>
                        <td>
                            <%= log.id %>
                        </td>
                        <td>
                            <%= log.book_title %>
                        </td>
                        <td>
                            <%= log.user %>
                        </td>
                        <td>
                            <%= log.timestamp %>
                        </td>
                    </tr>
                    <% }) } else { %>
                        <tr>
                            <td colspan="4">No borrow logs available</td>
                        </tr>
                        <% } %>
            </tbody>
        </table>
    </div>
</body>

</html>