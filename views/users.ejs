<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Users</title>
    <link rel="stylesheet" href="/style.css">
    <style>
        .main-content table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .main-content th,
        .main-content td {
            padding: 12px 15px;
            border: 1px solid #ddd;
            text-align: left;
        }

        .main-content th {
            background-color: #2c3e50;
            color: white;
        }

        .main-content tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .main-content tr:hover {
            background-color: #ddd;
        }
    </style>
</head>

<body>
    <aside class="sidebar">
        <h2>ðŸ“š Library</h2>
        <a href="/dashboard">Dashboard</a>
        <% if(user.role==='librarian' ){ %>
            <a href="/logs">Borrow Logs</a>
            <a href="/users" class="active">Users</a>
            <% } %>
                <a href="/logout">Logout</a>
    </aside>

    <div class="main-content">
        <header>
            <h1>All Users</h1>
        </header>

        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                <% if(users.length){ users.forEach(u=> { %>
                    <tr>
                        <td>
                            <%= u.id %>
                        </td>
                        <td>
                            <%= u.username %>
                        </td>
                        <td>
                            <%= u.role %>
                        </td>
                    </tr>
                    <% }) } else { %>
                        <tr>
                            <td colspan="3">No users found</td>
                        </tr>
                        <% } %>
            </tbody>
        </table>
    </div>
</body>

</html>